{
  "AppSettings": {
    "DefaultOutputDirectory": "./Output",
    "EnableDetailedLogging": true,
    "MaxFileSizeInMB": 50,
    "SupportedFileExtensions": [".cs"],
    "DefaultSplitMode": "PublicPrivate",
    "BackupOriginalFile": false
  },
  "ParsingSettings": {
    "IncludeProperties": true,
    "IncludeConstructors": true,
    "IncludeFields": false,
    "MinimumMethodsPerFile": 1,
    "MaximumMethodsPerFile": 50
  },
  "OutputSettings": {
    "IndentSize": 4,
    "UseSpaces": true,
    "AddGeneratedComment": true,
    "PreserveOriginalFormatting": true,
    "FileNamingPattern": "{ClassName}_Part{PartNumber}.cs"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  }
}