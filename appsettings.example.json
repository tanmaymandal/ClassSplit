{
  "AppSettings": {
    "DefaultSourceDirectory": "./MyProject/Models",
    "DefaultOutputDirectory": "./MyProject/Generated",
    "DefaultSourceFile": "./MyProject/Models/UserModel.cs",
    "DefaultDestinationFile": "./MyProject/Generated/UserModel_Split.cs",
    "EnableDetailedLogging": true,
    "MaxFileSizeInMB": 100,
    "SupportedFileExtensions": [".cs"],
    "DefaultSplitMode": "PublicPrivate",
    "BackupOriginalFile": true,
    "CreateDirectoriesIfNotExist": true
  },
  "ParsingSettings": {
    "IncludeProperties": true,
    "IncludeConstructors": true,
    "IncludeFields": false,
    "MinimumMethodsPerFile": 2,
    "MaximumMethodsPerFile": 20
  },
  "OutputSettings": {
    "IndentSize": 4,
    "UseSpaces": true,
    "AddGeneratedComment": true,
    "PreserveOriginalFormatting": true,
    "FileNamingPattern": "{ClassName}_Part{PartNumber}.cs"
  }
}